{% extends 'base2.html.twig' %}

{% block username %} Adminstrator{% endblock %}

{% block strong %}{%  endblock %}

{%  block h2 %} {% endblock %}

{% block path %}
    {{ path('livr_indexAdmin') }}
{% endblock %}

{% block body %}

    <div class="breadcrumb parallax">
        <h1>Register Account</h1>
        <ul>
            <li><a href="index.html">Home</a></li>
            <li><a href="#">Account</a></li>
            <li><a href="register.html">Register</a></li>
        </ul>
    </div>

    <div class="container">
    <div class="row">
    <div class="col-sm-3 hidden-xs column-left" id="column-left">
        <div class="Categories left-sidebar-widget">
            <div class="columnblock-title">Account</div>
            <div class="category_block">
                <ul class="box-category">
                    <li><a href="#">Login</a></li>
                    <li><a href="#">Register</a></li>
                    <li><a href="forgetpassword.html">Forgotten Password</a></li>
                    <li><a href="#">My Account</a></li>
                    <li><a href="#">Address Book</a></li>
                    <li><a href="#">Wish List</a></li>
                    <li><a href="#">Order History</a></li>
                    <li><a href="#">Downloads</a></li>
                    <li><a href="#">Reward Points</a></li>
                    <li><a href="#">Transactions</a></li>
                    <li><a href="#">Returns</a></li>
                    <li><a href="#">Newsletter</a></li>
                    <li><a href="#">Recurring payments</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-sm-9" id="content">
        <fieldset id="address">
            <ul>
                <li><a href="{{ path('rec_front') }}">new reclamation</a></li>
            </ul>
            <legend>Information réclamations</legend>
    <table class="table table-hover">
        <thead>
        <tr>
            <th style="width:60px;">reclamation</th>
            <th>etat</th>
            <th>designation</th>
            <th>description</th>
            <th>date</th>
            <th>categorie</th>
            <th>produit</th>
            <th>Etat</th>
            <th>Action</th>

        </tr>
        </thead>

        <tbody>
        {% for r in rec %}
            <tr>


                <td><a href="{{ path('recfront_show', { 'id': r.id }) }}">{{ r.id }}</a></td>
                <td>
                    <a href="javascript:void(0);">{{ r.etat }}</a>
                </td>
                <td>{{ r.designation }}</td>
                <td>{{ r.description }}</td>
                <td>{{ r.date | date("d/m/Y")}}</td>
                <td>{{ r.idc.nomR}}</td>
                <td>{{ r.idp.nom }}</td>
                {% if r.etat=='0' %}
                <td>
                    En cours
                </td>
                {% else %}
                    <td style="color:green">Traité</td>
                    {% endif %}



                <td>
                    <ol>
                        {%  if app.user == r.utilisateur %}

                        <li>
                            <a href="{{ path('recfront_edit', { 'id': r.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('recfront_delete', { 'id': r.id }) }}">delete</a>
                        </li>
                            <li>
                                <a href="{{ path('recfront_show', { 'id': r.id }) }}">Show</a>
                            </li>
                        {% endif %}
                    </ol>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
        </fieldset>



    </div>
    </div>
    </div>
{% endblock %}